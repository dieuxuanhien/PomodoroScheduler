<UserControl x:Class="PomodoroScheduler.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PomodoroScheduler"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="750">
    <Grid Background="#FFD9D9D9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="timerPage_btn" Grid.Column="0">
            <Button.Content>
                <Label FontFamily="Fonts/#RobotoMono-Thin" Content="TIMER" FontSize="24"/>

            </Button.Content>

        </Button>
    </Grid>

</UserControl>
